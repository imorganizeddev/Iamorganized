<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myDrawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:scrollbars="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:descendantFocusability="beforeDescendants"
                    android:focusableInTouchMode="true">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="#3597d4">
                        <ImageView
                            android:padding="10dp"
                            android:id="@+id/imglist"
                            android:src="@drawable/list2x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true" />
                        <ImageView
                            android:src="@drawable/i_m_logo_white"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="40dp" />
                        <LinearLayout
                            android:id="@+id/layoutheader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#FFFFFF"
                                android:textSize="18sp"
                                android:textStyle="normal"
                                android:layout_marginLeft="30dp"
                                android:layout_gravity="center_vertical"
                                android:text="Inventory Management" />
                        </LinearLayout>
                        <ImageView
                            android:padding="10dp"
                            android:id="@+id/imgsearchicon"
                            android:src="@drawable/search2x"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" />
                    </RelativeLayout>
                </LinearLayout>
                <TextView
                    android:background="#eceff1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Welcome, Select an Inventory to start"
                    android:textSize="18sp"
                    android:gravity="center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#27333a" />
                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:background="#FFFFFF"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/llmanu"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:background="@drawable/customborder">
                            <TextView
                                android:id="@+id/txtmanualentry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Manual Entry Inventory"
                                android:textColor="#5b727e"
                                android:textSize="18sp"
                                android:paddingLeft="45dp"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:clickable="true" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/manual_entry2x"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llvoice"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70"
                            android:background="@drawable/customborder">
                            <TextView
                                android:id="@+id/txtvoicedictation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Voice Dictation Inventory"
                                android:textColor="#5b727e"
                                android:textSize="18sp"
                                android:paddingLeft="45dp"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:clickable="true" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/voice_dictation"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llbar"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/customborder"
                            android:layout_weight="70">
                            <TextView
                                android:id="@+id/txtbarcodeentry"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Barcode Entry Inventory"
                                android:textColor="#5b727e"
                                android:textSize="18sp"
                                android:paddingLeft="45dp"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:clickable="true" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/barcode_entry"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llfindit"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="70">
                            <TextView
                                android:id="@+id/txtfindit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Find It!"
                                android:textColor="#5b727e"
                                android:textSize="18sp"
                                android:paddingLeft="45dp"
                                android:layout_gravity="center"
                                android:gravity="left"
                                android:clickable="true" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="30">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/barcode_entry"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/llCreateNewProject"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true">
                                <ImageView
                                    android:id="@+id/imgCreateProjectFromMain"
                                    android:layout_height="50dp"
                                    android:visibility="gone"
                                    android:layout_width="50dp"
                                    android:src="@drawable/appened2x"
                                    android:layout_centerInParent="true" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
<!--Main Content Area End-->
<!--Left Side Drawer Start-->
    <LinearLayout
        android:id="@+id/leftListView"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/background_light">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:scrollbars="vertical">
            <LinearLayout
                android:id="@+id/leftListView"
                android:orientation="vertical"
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="@android:color/background_light">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="#3597d4">
                    <LinearLayout
                        android:id="@+id/layoutheader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp"
                            android:textStyle="normal"
                            android:layout_marginLeft="25dp"
                            android:layout_gravity="center_vertical"
                            android:text="Settings" />
                    </LinearLayout>
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imgNDLogOut"
                        android:src="@drawable/logout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" />
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imgNDCheck"
                        android:src="@drawable/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="60dp"
                        android:layout_alignParentRight="true" />
                    <ImageView
                        android:padding="10dp"
                        android:id="@+id/imgNDHelp"
                        android:src="@drawable/helpicon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="120dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            <!-- Section below is for Upgrade -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:id="@+id/txtUpgrade"
                        android:text="You are a gold member."
                        android:textColor="#5b727e"
                        android:textSize="14sp"
                        android:layout_alignParentLeft="true" />
                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:padding="10dp"
                        android:layout_alignParentRight="true"
                        android:id="@+id/btnUpgrade"
                        android:src="@drawable/upgrade" />
                </RelativeLayout>
            <!-- Section below is for Options -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:background="@drawable/customborder"
                    android:paddingBottom="25dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/lblNDOptionsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Options"
                                android:textColor="#62a5d0"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60">
                            <TextView
                                android:id="@+id/lblNDOptionsAlert"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alert tone"
                                android:textColor="#5b727e"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40">
                            <Switch
                                android:id="@+id/swNDOptionsAlert"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:checked="false"
                                android:textOn="YES"
                                android:textOff="NO"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60">
                            <TextView
                                android:id="@+id/lblNDOptionsVibration"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Vibration on alert"
                                android:textColor="#5b727e"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40">
                            <Switch
                                android:id="@+id/swNDOptionsVibration"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:checked="false"
                                android:textOn="YES"
                                android:textOff="NO"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60">
                            <TextView
                                android:id="@+id/lblNDOptionsUploadOnWifi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="WiFi Upload"
                                android:textColor="#5b727e"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40">
                            <Switch
                                android:id="@+id/swNDOptionsUploadOnWifi"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:checked="false"
                                android:textOn="YES"
                                android:textOff="NO"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="60">
                            <TextView
                                android:id="@+id/lblNDOptionsScanViaBluetooth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Blutooth Scan"
                                android:textColor="#5b727e"
                                android:textSize="14sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="40">
                            <Switch
                                android:id="@+id/swNDOptionsScanViaBlutooth"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:checked="false"
                                android:textOn="YES"
                                android:textOff="NO"
                                android:layout_alignParentRight="true" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>
            <!-- Section below is for Company Details -->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:paddingBottom="25dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginBottom="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/lblNDOptionsText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Company Details"
                                android:textColor="#62a5d0"
                                android:textSize="16sp"
                                android:layout_gravity="center_vertical" />
                        </LinearLayout>
                    </LinearLayout>
                    <EditText
                        android:id="@+id/txtNDName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/customborder"
                        android:textCursorDrawable="@drawable/edittextstyle" />
                    <EditText
                        android:id="@+id/txtNDCompanyName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Company Name"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/customborder"
                        android:textCursorDrawable="@drawable/edittextstyle" />
                    <EditText
                        android:id="@+id/txtNDEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="false"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/customborder"
                        android:textCursorDrawable="@drawable/edittextstyle" />
                    <EditText
                        android:id="@+id/txtNDMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Mobile Number"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="25dp"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/customborder"
                        android:textCursorDrawable="@drawable/edittextstyle" />
                    <EditText
                        android:id="@+id/txtNDAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address"
                        android:singleLine="true"
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="10dp"
                        android:textColorHint="#cccccc"
                        android:textSize="14sp"
                        android:textColor="#000000"
                        android:background="@drawable/customborder"
                        android:textCursorDrawable="@drawable/edittextstyle" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>